apiVersion: apps/v1
kind: Deployment
metadata:
  name: e-education
spec:
  replicas: 2
  selector:
    matchLabels:
      app: e-education
  template:
    metadata:
      labels:
        app: e-education
    spec:
      containers:
      - name: e-education
        image: sasipretham/e-education:1.0
        ports:
        - containerPort: 5173

---
apiVersion: v1
kind: Service
metadata:
  name: e-education-service
spec:
  selector:
    app: e-education
  ports:
    - protocol: TCP
      port: 80
      targetPort: 5173
  type: NodePort  # Use NodePort because Ingress will manage external access

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: e-education-ingress
  annotations:
    kubernetes.io/ingress.class: alb
    alb.ingress.kubernetes.io/scheme: internet-facing
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTP": 80}]'
spec:
  rules:
    - http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: e-education-service
                port:
                  number: 80
